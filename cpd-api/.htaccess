# Backend API .htaccess
# Prevent directory browsing
Options -Indexes

# Protect sensitive files
<FilesMatch "^\.(env|git|gitignore)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Allow access to PHP files
<FilesMatch "\.php$">
  Order allow,deny
  Allow from all
</FilesMatch>

# Set default charset
AddDefaultCharset utf-8